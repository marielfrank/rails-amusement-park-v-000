<div class="center">
  <div class="pic">
    <img src="http://8900-presscdn-0-84.pagely.netdna-cdn.com/wp-content/themes/beautycon/assets/img/avatar-grey.png" height="250">
  </div>

  <div class="info">
    <p>Name: <%= @user.name %></p>
    <p>Mood: <%= @user.mood %></p>
    <p>Happiness: <%= @user.happiness %></p>
    <p>Nausea: <%= @user.nausea %></p>
    <p>Height: <%= @user.height %></p>
    <p>Tickets: <%= @user.tickets %></p>
    <%= content_tag :p, 'ADMIN' if @user.admin %>
    <p><%= link_to "See attractions", attractions_path %></p>
  </div>
</div>